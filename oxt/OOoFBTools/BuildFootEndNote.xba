		Case 0 &apos; ... текст (x)
			GetRegStringForLeft = &quot;\(&quot;
		Case 1 &apos; ... текст [x]
			GetRegStringForLeft = &quot;\[&quot;
		Case 2 &apos; ... текст {x}
			GetRegStringForLeft = &quot;\{&quot;
		Case 3 &apos; ... текст &lt;x&gt;
			GetRegStringForLeft = &quot;&lt;&quot;
		Case 4 &apos; ... текст /x/
			GetRegStringForLeft = &quot;/&quot;
		Case 5 &apos; ... текст \x\
			GetRegStringForLeft = &quot;\\&quot;
		Case Else
			GetRegStringForLeft = &quot;\(&quot;
	End Select
End Function

